/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2835";

    fragment@0 {
        target = <&i2c1>;
        __overlay__ {
            ads1115@48 {
                compatible = "invensense,ads1115";
                reg = <0x48>; // I2C address
                status = "okay";
                // Optional interrupt support
                // interrupt-parent = <&gpio>;
                // interrupts = <17 IRQ_TYPE_LEVEL_HIGH>; // If INT pin is connected to GPIO17
            };
        };
    };
};
